<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--shadow-->
    <item>
        <shape
            android:shape="oval">
            <size
                android:width="28dp"
                android:height="28dp"/>
            <gradient
                android:type="radial"
                android:gradientRadius="50%"
                android:startColor="#80000000"
                android:endColor="#00000000"/>
            
        </shape>
        
    </item>
    
    <!--thumb-->
    <item
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp">
        
        <shape
            android:shape="oval">
            
            <solid android:color="?attr/colorSurfaceVariant"/>
        </shape>
        
    </item>
    
    <!--indicator-->
    <item
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp">

        <shape
            android:shape="oval">

            <solid android:color="#673ab7"/>
        </shape>

    </item>
    
</layer-list>
